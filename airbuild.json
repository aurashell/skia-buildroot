        "--compare {build}/libparticles.a": "lib",
        "--compare {build}/libpathkit.a": "lib",
        "--compare {build}/libpiex.a": "lib",
        "--compare {build}/libpng.a": "lib",
        "--compare {build}/libsdl.a": "lib",
        "--compare {build}/libsfntly.a": "lib",
        "--compare {build}/libskia.a": "lib",
        "--compare {build}/libskottie.a": "lib",
        "--compare {build}/libskparagraph.a": "lib",
        "--compare {build}/libsksg.a": "lib",
        "--compare {build}/libskshaper.a": "lib",
