        "--strip {build}/skqp": "bin",
        "--strip {build}/sktexttopdf": "bin",
        "--strip {build}/skvmtool": "bin",
        "--strip {build}/viewer": "bin",
        "--compare {build}/icudtl.dat": "lib",
        "--compare {source}/include/android/*.h": "include/skia/android/",
        "--compare {source}/include/atlastext/*.h": "include/skia/atlastext/",
        "--compare {source}/include/c/*.h": "include/skia/c/",
        "--compare {source}/include/codec/*.h": "include/skia/codec/",
