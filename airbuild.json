        "--strip {build}/create_test_font": "bin",
        "--strip {build}/create_test_font_color": "bin",
        "--strip {build}/dm": "bin",
        "--strip {build}/dump_record": "bin",
        "--strip {build}/editor": "bin",
        "--strip {build}/fiddle": "bin",
        "--strip {build}/fiddle_examples": "bin",
        "--strip {build}/fm": "bin",
        "--strip {build}/fuzz": "bin",
        "--strip {build}/get_images_from_skps": "bin",
        "--strip {build}/HelloWorld": "bin",
        "--strip {build}/imgcvt": "bin",
        "--strip {build}/jitter_gms": "bin",
        "--strip {build}/list_gms": "bin",
        "--strip {build}/list_gpu_unit_tests": "bin",
        "--strip {build}/lua_app": "bin",
