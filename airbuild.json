        "type": "git",
        "repository": "https://skia.googlesource.com/skia",
        "revision": "master"
      },
      "tool": "gn",
      "precfg": [
        "cd {source}; python2 tools/git-sync-deps"
      ],
      "configure-flags": "is_debug=false",
      "install-copy": {
        "--compare {build}/libdng_sdk.a": "lib",
